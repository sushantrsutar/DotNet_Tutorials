@model EmplyeeCrudWithImg.Models.Employee1

@{
            ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="EmpId" class="control-label"></label>
                <input asp-for="EmpId" class="form-control" readonly />
                <span asp-validation-for="EmpId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EmpName" class="control-label"></label>
                <input asp-for="EmpName" class="form-control" />
                <span asp-validation-for="EmpName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EmpSalary" class="control-label"></label>
                <input asp-for="EmpSalary" class="form-control" />
                <span asp-validation-for="EmpSalary" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EmpImage" class="control-label"></label>
                <input asp-for="EmpImage" type="file" name="file" class="form-control" />
                <span asp-validation-for="EmpImage" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Previous Image</label>
                <img src="@Url.Content(Model.EmpImage)" height="150" width="200" />

            </div>
            <div class="form-group mb-3">
                <label asp-for="DeptId" class="control-label">Department Name</label>
                <select asp-for="DeptId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.depts,"DeptId","DeptName"))"></select>
                <span asp-validation-for="DeptId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
